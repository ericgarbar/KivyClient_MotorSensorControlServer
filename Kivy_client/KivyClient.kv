<DriversPanel>
    orientation: 'vertical'

<DriverWidget>
    spacing: 5
    padding: 10

    orientation: 'horizontal'
    rbtn: relay_btn
    time_widget: time_on_label
    timer_btn: timerbtn


    Button:
        text: 'Edit'
        size_hint_x: 0.2
        id: namebtn
        on_press: app.change_name(root.driverid, root.name)

    Label:
        text: root.name
        halign: 'right'
        height:self.parent.height



    Button:
        text: self.parent.state
        font_size: 15
        height:self.parent.height
        id: relay_btn
        on_press: app._toggle_event(root.driverid)

    Label:
        text: root.name
        halign: 'right'
        height:self.parent.height
        id: time_on_label

    Button:
        text: 'Timer'
        id: timerbtn
        on_press: app.set_timer(root.driverid, root.name)





