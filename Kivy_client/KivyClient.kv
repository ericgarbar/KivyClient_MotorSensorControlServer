<DriversPanel>
    orientation: 'vertical'


<ServerNavBar>
    orientation: 'vertical'
    padding: 10
    spacing: 5
    ServerButton:
    ServerButton:
    ServerButton:

<ServerButton>
    on_press: app.change_server()






<DriverWidget>
    spacing: 5
    padding: 10

    orientation: 'horizontal'
    rbtn: relay_btn
    time_widget: timelabel

    Button:
        text: 'Edit'
        size_hint_x: 0.2
        id: namebtn
        on_press: app.change_name(root.driverid, root.name)

    Label:
        text: root.name
        halign: 'right'
        height:self.parent.height



    Button:
        text: self.parent.state
        font_size: 15
        height:self.parent.height
        id: relay_btn
        on_press: app._toggle_event(root.driverid)

    Label:
        text: ''
        halign: 'left' #default
        height: self.parent.height
        id: timelabel

    Button:
        text: 'Timer'
        id: timerbtn





