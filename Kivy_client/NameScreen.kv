<NameScreen>:
    new_name: new_name

    BoxLayout:
        orientation: 'vertical'
        padding: 15
        spacing: 15

        Label:
            text: 'Enter a new name for {0}'.format(root.old_name)
            size_hint_y: 0.4
            font_size: new_name.font_size
            size_hint_x: 1

        TextInput:
            size_hint_y: 0.15
            font_size: self.height * .7
            id: new_name
            on_text_validate: app._name_event(root.identifier, new_name.text); new_name.text = ''; app.back_to_main()
            multiline: False


        BoxLayout:
            size_hint_y: 0.45
            orientation: 'horizontal'
            padding:
            spacing: 15
            Button:
                on_press: app._name_event(root.identifier, new_name.text); new_name.text = ''; app.back_to_main()
                text: 'Enter'
            Button:
                on_press: new_name.text = ''; app.back_to_main()
                text: 'Cancel'