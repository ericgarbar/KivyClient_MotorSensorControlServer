<TimerScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 15
        spacing: 15

        Label:
            text: 'Timer for'.format(root.driver_name)
            size_hint_y: 0.4
            font_size: seconds.font_size
            size_hint_x: 1

        BoxLayout:
            size_hint_y: 0.15
            orientation: 'horizontal'
            spacing: 15
            padding: 10
            id: enter_time

            Label:
                text: "Hours"
                font_size: self.height * .7

            LimitTextInput:
                max_char: 2
                ranges: [(0,9), (0,9)]
                upper_limit: 24
                id: hours


            Label:
                text: "Minutes"
                font_size: self.height * .7
            LimitTextInput:
                id: minutes
                max_char: 2
                ranges: [(0, 5), (0, 9)]
                on_text_validate: hours.focus = True



            Label:
                text: "Seconds"
                font_size: self.height * .7
            LimitTextInput:
                id: seconds
                max_char: 2
                on_text_validate: minutes.focus = True
                ranges: [(0, 5), (0, 9)]
                focus: True

        BoxLayout:
            size_hint_y: 0.45
            orientation: 'horizontal'
            padding:
            spacing: 15
            Button:
                on_press: app._name_event(root.identifier, new_name.text); new_name.text = ''; app.back_to_main()
                text: 'Enter'
            Button:
                on_press: new_name.text = ''; app.back_to_main()
                text: 'Cancel'

<LimitTextInput>:
    multiline: False
    font_size: self.height * .7
    size_hint_x: .4



